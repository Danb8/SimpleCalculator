<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="chief.simplecalculator.MainActivity">


   <Button
        android:id="@+id/one_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/one"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/two_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/two"
        android:layout_toRightOf="@id/one_button"
        android:layout_alignBottom="@id/one_button"/>

    <Button
        android:id="@+id/three_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/three"
        android:layout_toRightOf="@id/two_button"
        android:layout_alignBottom="@id/one_button"/>

    <Button
        android:id="@+id/four_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/four"
        android:layout_below="@id/one_button"
        android:layout_alignLeft="@id/one_button"/>

    <Button
        android:id="@+id/five_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/five"
        android:layout_toRightOf="@id/four_button"
        android:layout_below="@+id/two_button"
        />

    <Button
        android:id="@+id/six_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/six"
        android:layout_toRightOf="@id/five_button"
        android:layout_below="@id/three_button"/>

    <Button
        android:id="@+id/seven_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/seven"
        android:layout_below="@+id/four_button"
        android:layout_alignLeft="@id/one_button"/>

    <Button
        android:id="@+id/eight_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/eight"
        android:layout_toRightOf="@+id/seven_button"
        android:layout_below="@+id/five_button"/>

    <Button
        android:id="@+id/nine_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/nine"
        android:layout_below="@+id/six_button"
        android:layout_toRightOf="@id/eight_button"/>

    <Button
        android:id="@+id/zero_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/zero"
        android:layout_below="@+id/eight_button"
        android:layout_alignLeft="@id/one_button"/>

    <Button
        android:id="@+id/decimal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/decimal"
        android:layout_below="@id/eight_button"
        android:layout_toRightOf="@id/zero_button"/>

    <Button
        android:id="@+id/equal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/equal"
        android:layout_toRightOf="@id/decimal_button"
        android:layout_below="@id/eight_button"/>

    <Button
        android:id="@+id/plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/plus"
        android:layout_alignBottom="@id/one_button"
        android:layout_toRightOf="@id/three_button"/>

    <Button
        android:id="@+id/minus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/minus"
        android:layout_toRightOf="@id/six_button"
        android:layout_alignBottom="@id/four_button"/>

    <Button
        android:id="@+id/multiply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/seven_button"
        android:layout_toRightOf="@id/nine_button"
        android:text="@string/multiply"/>

    <Button
        android:id="@+id/divide_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/zero_button"
        android:layout_toRightOf="@id/equal_button"
        android:padding="2dp"
        android:text="@string/divide"/>

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculation_zone"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_margin="30dp"/>





</RelativeLayout>
